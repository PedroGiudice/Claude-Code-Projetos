{
  "manifest_version": "0.2",
  "name": "djen-mcp-server",
  "display_name": "DJEN - Diário de Justiça Eletrônico Nacional",
  "version": "0.1.0",
  "description": "Servidor MCP para integração com API DJEN (Diário de Justiça Eletrônico Nacional) - Busca de publicações, jurimetria e análise processual",
  "author": {
    "name": "CMR Advogados"
  },
  "license": "MIT",
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/dist/index.js"
      ],
      "env": {
        "DJEN_API_URL": "https://comunicaapi.pje.jus.br",
        "DATABASE_PATH": "AUTO_DETECT_DRIVE/djen-data/djen.db",
        "EXTERNAL_DRIVE_VOLUME": "${user_config.external_drive_volume:HD_PEDRO}",
        "LOG_LEVEL": "${user_config.log_level:info}"
      }
    }
  }
}
