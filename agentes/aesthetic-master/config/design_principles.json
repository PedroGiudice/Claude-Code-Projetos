{
  "_comment": "Design Principles for Aesthetic Master - Define o DNA visual do projeto",

  "project_aesthetic": {
    "primary_style": "modern_professional",
    "secondary_styles": ["minimalist", "clean", "accessible"],
    "target_audience": "legal_professionals",
    "industry": "legal_tech",
    "brand_personality": ["trustworthy", "efficient", "sophisticated", "innovative"]
  },

  "color_philosophy": {
    "palette_type": "vibrant_professional",
    "primary_hues": ["cyan", "blue", "purple"],
    "accent_hues": ["green", "yellow"],
    "forbidden_hues": ["dark_red", "dark_blue", "neon_colors"],
    "contrast_requirements": {
      "text_on_background": 4.5,
      "large_text": 3.0,
      "ui_components": 3.0
    },
    "color_harmony": "analogous_with_accent"
  },

  "typography": {
    "heading_family": "sans-serif",
    "body_family": "sans-serif",
    "code_family": "monospace",
    "scale_ratio": 1.25,
    "base_size_px": 16,
    "line_height": {
      "heading": 1.2,
      "body": 1.5,
      "code": 1.4
    },
    "font_weights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "bold": 700
    }
  },

  "spacing": {
    "system": "8px_base",
    "scale": [4, 8, 12, 16, 24, 32, 48, 64, 96, 128],
    "component_padding": 16,
    "section_margin": 32,
    "layout_gap": 24
  },

  "visual_hierarchy": {
    "principles": [
      "size_matters",
      "color_draws_attention",
      "whitespace_creates_focus",
      "alignment_creates_order"
    ],
    "priority_levels": {
      "critical": "size_xl + accent_color + bold",
      "high": "size_lg + primary_color + medium_weight",
      "medium": "size_base + text_color + regular_weight",
      "low": "size_sm + muted_color + regular_weight"
    }
  },

  "layout_principles": {
    "approach": "mobile_first",
    "grid_system": "12_column",
    "breakpoints": {
      "mobile": 320,
      "tablet": 768,
      "desktop": 1024,
      "wide": 1440
    },
    "max_content_width": 1200,
    "sidebar_width": 280
  },

  "interaction_design": {
    "animation_duration": {
      "micro": 150,
      "standard": 300,
      "complex": 500
    },
    "easing": "ease_in_out",
    "feedback_types": ["hover", "active", "focus", "disabled", "loading"],
    "transition_properties": ["color", "background-color", "transform", "opacity"]
  },

  "accessibility": {
    "level": "WCAG_2_1_AA",
    "requirements": [
      "keyboard_navigation",
      "screen_reader_support",
      "color_blind_safe",
      "reduced_motion_support",
      "focus_indicators"
    ]
  },

  "performance": {
    "budgets": {
      "initial_js": 200,
      "total_page_size": 1000,
      "first_contentful_paint": 1.8,
      "time_to_interactive": 3.5
    },
    "optimization_requirements": [
      "code_splitting",
      "lazy_loading",
      "image_optimization",
      "css_purging"
    ]
  }
}
