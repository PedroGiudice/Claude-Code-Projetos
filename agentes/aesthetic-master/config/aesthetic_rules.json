{
  "_comment": "Aesthetic Rules - ENFORCEMENT ABSOLUTO (não negociável)",

  "color_rules": {
    "MANDATORY": [
      "Use design tokens from centralized palette",
      "Ensure 4.5:1 contrast ratio for text",
      "Test with colorblind simulators",
      "Provide alternative to color-only information"
    ],
    "FORBIDDEN": [
      "Hardcoded hex colors without tokens",
      "Pure black (#000000) or pure white (#FFFFFF) for text",
      "More than 5 colors in single component",
      "Color as only differentiator for states"
    ]
  },

  "typography_rules": {
    "MANDATORY": [
      "Use type scale consistently (1.25 ratio)",
      "Set base font-size to 16px minimum",
      "Ensure line-height >= 1.5 for body text",
      "Use semantic HTML (h1-h6, p, strong, em)"
    ],
    "FORBIDDEN": [
      "Font-size < 14px for body text",
      "All caps for long text (> 1 sentence)",
      "Justified text alignment",
      "More than 3 font families in project"
    ]
  },

  "spacing_rules": {
    "MANDATORY": [
      "Use 8px spacing system",
      "Apply consistent padding within components",
      "Maintain visual rhythm with spacing scale",
      "Use CSS Grid/Flexbox for layout (no floats)"
    ],
    "FORBIDDEN": [
      "Arbitrary spacing values (e.g., padding: 13px)",
      "Negative margins for layout",
      "Position: absolute without justify",
      "Spacing < 4px between interactive elements"
    ]
  },

  "component_rules": {
    "MANDATORY": [
      "Follow Atomic Design methodology",
      "Create reusable, composable components",
      "Document props and usage in Storybook",
      "Include all states (default, hover, active, disabled, loading, error)"
    ],
    "FORBIDDEN": [
      "Components > 300 lines of code",
      "More than 10 props per component",
      "Inline styles without CSS-in-JS library",
      "God components (doing too much)"
    ]
  },

  "layout_rules": {
    "MANDATORY": [
      "Mobile-first responsive design",
      "Test on 320px, 768px, 1024px, 1440px",
      "Use semantic HTML5 elements (header, nav, main, aside, footer)",
      "Ensure keyboard navigation works"
    ],
    "FORBIDDEN": [
      "Fixed pixel widths for containers",
      "Layout breakage < 1920px width",
      "Horizontal scrolling on mobile",
      "Overlapping elements on small screens"
    ]
  },

  "interaction_rules": {
    "MANDATORY": [
      "Provide visual feedback for all interactions",
      "Animation duration 150-500ms",
      "Support reduced-motion preference",
      "Clear focus indicators (2px outline minimum)"
    ],
    "FORBIDDEN": [
      "Animations > 500ms duration",
      "Auto-playing animations without pause",
      "Hover-only interactions (mobile incompatible)",
      "Disabled buttons without explanation"
    ]
  },

  "accessibility_rules": {
    "MANDATORY": [
      "Alt text for all images",
      "ARIA labels for icons and custom controls",
      "Keyboard navigation for all interactive elements",
      "Form labels associated with inputs",
      "Skip-to-content link"
    ],
    "FORBIDDEN": [
      "Removing focus outlines without alternative",
      "Color as only indicator of errors",
      "CAPTCHAs without alternative",
      "Auto-focus on page load",
      "Time-limited interactions < 20 seconds"
    ]
  },

  "performance_rules": {
    "MANDATORY": [
      "Code splitting for routes",
      "Lazy loading for images and heavy components",
      "Tree shaking for unused code",
      "CSS purging in production",
      "Lighthouse score >= 90"
    ],
    "FORBIDDEN": [
      "Unoptimized images > 100KB",
      "Render-blocking CSS/JS",
      "More than 50 HTTP requests on initial load",
      "Bundle size > 200KB before code splitting",
      "Unused dependencies in package.json"
    ]
  },

  "code_quality_rules": {
    "MANDATORY": [
      "TypeScript strict mode enabled",
      "ESLint + Prettier configured",
      "Component tests (Jest + React Testing Library)",
      "Visual regression tests (Playwright/Chromatic)",
      "PropTypes or TypeScript interfaces"
    ],
    "FORBIDDEN": [
      "Console.log in production",
      "TODO comments without tickets",
      "Commented-out code",
      "Magic numbers without constants",
      "Files > 500 lines of code"
    ]
  },

  "design_system_rules": {
    "MANDATORY": [
      "All components use design tokens",
      "Storybook documentation for all components",
      "Versioned design system package",
      "Changelog for design system updates",
      "Design/dev handoff specifications"
    ],
    "FORBIDDEN": [
      "Duplicate component implementations",
      "Components not in design system being used",
      "Breaking changes without major version bump",
      "Undocumented component variants"
    ]
  },

  "enforcement_levels": {
    "BLOCKER": "Prevents merge/deploy (accessibility, performance)",
    "CRITICAL": "Must fix within 1 sprint (code quality, design system)",
    "HIGH": "Must fix within 2 sprints (UX, interactions)",
    "MEDIUM": "Should fix when touching code (minor aesthetic)",
    "LOW": "Nice to have (optimization, DRY)"
  }
}
